{
    "repositories":[
        {
            "type":"composer",
            "url":"https://wpackagist.org"
        }
    ],
    "require": {
        "johnpbloch/wordpress": "^5.4",
        "wpackagist-theme/twentytwenty": "1.4",
        "wpackagist-plugin/akismet": "4.1.6"
    },
    "require-dev": {
        "wpackagist-plugin/query-monitor": "3.6.0"
    },
    "extra": {
        "wordpress-install-dir": "wp"
    },
    "scripts": {
        "build-theme-assets": "cd wp-content/themes/oprofile/src && parcel build js/main.js --out-dir dist --public-url ./"
    }
}
